
<% if (message) { %>
  <div class="flash-message">
      <%= message %>
  </div>
<% } %>

<div class="form-container">
  <h1>Add New Classification</h1>
  <form action="/inv/add-classification" method="POST" class="form">
      <div class="form-group">
          <label for="classification_name">Classification Name:</label>
          <input type="text" id="classification_name" name="classification_name" pattern="^[a-zA-Z0-9]+$"
              title="Name must be alphanumeric characters only." required />
          <small class="form-note">Name must be alphanumeric characters only.</small>
      </div>
      <button type="submit" class="btn">Add Classification</button>
  </form>
</div>